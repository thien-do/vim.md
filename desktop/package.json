{
	"name": "@vimdotmd/desktop",
	"version": "1.0.0",
	"description": "Desktop version of Vim.md",
	"main": "src/main.js",
	"author": "Vim.md Team <vimdotmd@gmail.com>",
	"license": "MIT",
	"scripts": {
		"compile": "tsc",
		"start": "yarn compile && NODE_ENV=development electron .",
		"clean": "rm -rf ./dist",
		"pack": "yarn clean && yarn compile && electron-builder --dir",
		"dist": "yarn clean && yarn compile && electron-builder",
		"extract" :"npx asar extract ./dist/linux-unpacked/resources/app.asar ./dist/src",
		"postinstall": "electron-builder install-app-deps"
	},
	"dependencies": {
		"electron-store": "7.0.1"
	},
	"devDependencies": {
		"electron": "11.2.2",
		"typescript": "4.1.3",
		"electron-builder": "22.9.1"
	},
	"build": {
		"appId": "md.vim.app",
		"productName": "Vim.md",
		"copyright": "Copyright Â© 2021 vim.md",
		"linux": {
			"target": "AppImage",
			"category": "Development"
		},
		"files": [
			"package.json",
			{
				"from": "../web/build",
				"to": "web"
			},
			{
				"from": "src",
				"to": "src",
				"filter": [
					"**/*.js"
				]
			}
		]
	}
}
