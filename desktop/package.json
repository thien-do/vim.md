{
	"name": "vimdotmd",
	"version": "0.2.0",
	"description": "Desktop version of Vim.md",
	"main": "src/main.js",
	"author": "Vim.md Team <vimdotmd@gmail.com>",
	"license": "MIT",
	"scripts": {
		"start": "yarn _compile && NODE_ENV=development electron .",
		"dist": "yarn _clean && yarn _compile && electron-builder",
		"_compile": "tsc",
		"_clean": "rm -rf ./dist",
		"_pack": "yarn _clean && yarn _compile && electron-builder --dir",
		"_extract": "npx asar extract ./dist/linux-unpacked/resources/app.asar ./dist/src",
		"postinstall": "electron-builder install-app-deps"
	},
	"dependencies": {
		"dotenv": "^10.0.0",
		"electron-store": "8.0.0"
	},
	"devDependencies": {
		"electron": "13.1.1",
		"electron-builder": "22.10.5",
		"electron-notarize": "^1.0.0",
		"typescript": "4.3.2"
	},
	"build": {
		"appId": "md.vim.desktop",
		"buildVersion": "0.1",
		"productName": "Vim.md",
		"copyright": "Copyright Â© 2021 vim.md",
		"linux": {
			"target": "AppImage",
			"category": "Development"
		},
		"mac": {
			"type": "distribution",
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg"
			],
			"provisioningProfile": "./embedded.provisionprofile",
			"hardenedRuntime": true,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"mas": {
			"type": "distribution",
			"category": "public.app-category.developer-tools",
			"hardenedRuntime": false,
			"entitlements": "build/entitlements.mas.plist",
			"entitlementsInherit": "build/entitlements.mas.inherit.plist"
		},
		"dmg": {
			"sign": false
		},
		"files": [
			"package.json",
			"build",
			{
				"from": "../web/build",
				"to": "web"
			},
			{
				"from": "src",
				"to": "src",
				"filter": [
					"**/*.js"
				]
			}
		]
	}
}
