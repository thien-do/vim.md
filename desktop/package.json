{
	"name": "vimdotmd",
	"version": "0.2.0",
	"description": "Desktop version of Vim.md",
	"main": "src/main.js",
	"author": "Vim.md Team <vimdotmd@gmail.com>",
	"license": "MIT",
	"scripts": {
		"start": "yarn _compile && NODE_ENV=development electron .",
		"dist": "yarn _clean && yarn _compile && electron-builder",
		"_compile": "tsc",
		"_clean": "rm -rf ./dist",
		"_pack": "yarn _clean && yarn _compile && electron-builder --dir",
		"_extract": "npx asar extract ./dist/linux-unpacked/resources/app.asar ./dist/src",
		"postinstall": "electron-builder install-app-deps"
	},
	"dependencies": {
		"electron-store": "7.0.1"
	},
	"devDependencies": {
		"electron": "11.2.2",
		"electron-builder": "22.9.1",
		"electron-notarize": "^1.0.0",
		"typescript": "4.1.3"
	},
	"build": {
		"appId": "md.vim.app",
		"buildVersion": "beta-2",
		"productName": "Vim.md",
		"copyright": "Copyright Â© 2021 vim.md",
		"linux": {
			"target": "AppImage",
			"category": "Development"
		},
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": "dmg"
		},
		"dmg": {
			"sign": false
		},
		"files": [
			"package.json",
			"build",
			{
				"from": "../web/build",
				"to": "web"
			},
			{
				"from": "src",
				"to": "src",
				"filter": [
					"**/*.js"
				]
			}
		]
	}
}
